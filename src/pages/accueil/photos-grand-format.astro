  <Image src={presse7} alt="photo 7 pour la presse" width="2880" height="2156" />
  <Image src={presse8} alt="photo 8 pour la presse" width="2880" height="2156" />
  <Image src={presse9} alt="photo 9 pour la presse" width="2880" height="2156" />
  <Image src={presse10} alt="photo 10 pour la presse" width="2880" height="2156" />
  <Image src={presse11} alt="photo 11 pour la presse" width="2880" height="2156" />
  <Image src={presse12} alt="photo 12 pour la presse" width="2880" height="2156" />
  <Image src={presse13} alt="photo 13 pour la presse" width="1281" height="585" />

</Layout>
